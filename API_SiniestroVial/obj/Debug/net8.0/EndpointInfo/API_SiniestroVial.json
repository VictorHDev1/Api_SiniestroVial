              "schema": {
                "$ref": "#/components/schemas/RegistrarSiniestroCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrarSiniestroCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrarSiniestroCommand"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
