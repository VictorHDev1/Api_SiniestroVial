          },
          "numeroVictimas": {
            "type": "integer",
            "format": "int32"
          },
          "descripcion": {
            "type": "string",
            "nullable": true
          },
          "vehiculos": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VehiculoDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TipoSiniestro": {
        "enum": [
          1,
          2,
          3,
          4,
          99
        ],
        "type": "integer",
        "format": "int32"
      },
      "VehiculoDto": {
        "type": "object",
        "properties": {
          "tipo": {
            "type": "string",
            "nullable": true
          },
          "placa": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
